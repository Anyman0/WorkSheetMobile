<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkSheetMobile.LoginPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button" >
                <Setter Property="BackgroundColor" Value="OrangeRed"></Setter>
                <Setter Property="TextColor" Value="Black"></Setter>
                <Setter Property="FontAttributes" Value="Bold"></Setter>
                <Setter Property="BorderColor" Value="Black"></Setter>
                <Setter Property="BorderWidth" Value="3" ></Setter>
                <Setter Property="WidthRequest" Value="120"></Setter>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="UserNameEntry" Placeholder="UserName" VerticalOptions="Center"></Entry>
            <Entry x:Name="PasswordEntry" Placeholder="Password" VerticalOptions="Center"></Entry>
            <Button x:Name="LoginButton" BackgroundColor="OrangeRed" Text="Login" Clicked="LoginButton_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>